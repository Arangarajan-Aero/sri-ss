stages:
  - dependency_scanning

dependency_scanning:
  stage: dependency_scanning
  image: registry.gitlab.com/gitlab-org/security-products/analyzers/dependency-scanning:latest
  variables:
    DS_PACKAGE_MANAGER: "nuget"
  script:
    - /analyzer run
  artifacts:
    reports:
      dependency_scanning: gl-dependency-scanning-report.json
    expire_in: 1 week
  allow_failure: true



dependency_scan:
  stage: quality_and_dependency_scan
  image:
    name: registry.gitlab.com/gitlab-org/security-products/analyzers/dependency-scanning:latest
