    DS_PACKAGE_MANAGER: "nuget"  # Specify NuGet as the package manager for .NET
  script:
    # Run Dependency Scanning
    - /analyzer run
  allow_failure: true  # Allow the pipeline to continue if this job fails
  artifacts:
    reports:
      dependency_scanning: gl-dependency-scanning-report.json
    expire_in: 1 week
